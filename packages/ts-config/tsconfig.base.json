{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    /**
    * https://juejin.cn/post/7165429078470688781
    * 开启主要是为了搭配 references 使用
    * 开启之后 declaration 必须为 true，没必要，所以关了
    **/
    "composite": false,
    "incremental": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ESNext",
    // 直接编译成 esm
    "module": "ESNext"
  },
  "watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "**/__tests__",
      "**/__coverage__",
      "**/__mocks__",
      "build",
      "output",
      "dist",
      "public/externals/vendors"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
